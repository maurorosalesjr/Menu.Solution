@{
  Layout = "_Layout";
}

@using Menu.Models;
@model List<Menu.Models.MenuItem>;

<h2>Menu Items</h2>

@if (@Model.Count == 0)
{
  <h3>No Menu Items have been added yet!</h3>
} 

<ul>
  @foreach(MenuItem MenuItem in Model)
  {
    <li>@Html.ActionLink($"{MenuItem.Object}", "Details", new { id = MenuItem.MenuItemId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Menu Item", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>