@{
  Layout = "_Layout";
}

@model Menu.Models.MenuItem

<h2>Add a new Item</h2>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
  <br>
  @Html.LabelFor(model => model.BasePrice)
  @Html.TextBoxFor(model => model.BasePrice, new { @type = "number", @min = "1" })
  <br>
  @* @Html.Label("Select size")
  <br>
  @Html.DropDownList("SizeId")
  <br> *@
  <input type="submit" value="Add new menu item" class="cool" />
}
