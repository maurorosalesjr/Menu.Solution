@{
  Layout = "_Layout";
}

@using Menu.Models;

<h2>Sizes</h2>

@if (@Model.Count == 0)
{
  <h3>No sizes have been added yet!</h3>
} 

<ul>
  @foreach(Size Size in Model)
  {
    <li>@Html.ActionLink($"{Size.SizeName}", "Details", new { id = Size.SizeId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Size", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>